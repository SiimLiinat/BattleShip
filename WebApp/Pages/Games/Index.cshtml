@model WebApp.Pages_Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].GameOption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].GameJson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].TurnA)
